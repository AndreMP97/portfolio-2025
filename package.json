{
  "name": "portfolio-2025",
  "version": "1.0.10",
  "private": true,
  "type": "module",
  "scripts": {
    "bump-dependencies": "ncu -u && rm -f pnpm-lock.yaml && pnpm install && git add pnpm-lock.yaml package.json && git commit -m \"chore: bump dependencies\" || echo 'No changes to commit'",
    "bump-version": "npm version patch --no-git-tag-version && git add package.json && git commit -m \"chore: bump version\" || echo 'No version bump'",
    "build": "pnpm run clean && rsbuild build",
    "check": "pnpm run lint && pnpm run typecheck",
    "clean": "rm -rf dist",
    "dev": "rsbuild dev --open",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "generate-icons": "pnpm exec tsx src/scripts/generateIcons.ts",
    "lint": "pnpm exec eslint src/**/*.{ts,tsx}",
    "lint:fix": "pnpm exec eslint src/**/*.{ts,tsx} --fix",
    "preview": "rsbuild preview",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "typecheck": "pnpm exec tsc --project tsconfig.json --noEmit",
    "watch": "rsbuild dev --watch",
    "ci": "pnpm run check && pnpm run build"
  },
  "dependencies": {
    "framer-motion": "^12.23.12",
    "hamburger-react": "^2.5.2",
    "nanoid": "^5.1.5",
    "npm-check-updates": "^18.1.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwind-scrollbar": "^4.0.2",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@rsbuild/core": "^1.5.6",
    "@rsbuild/plugin-react": "^1.4.0",
    "@rsbuild/plugin-svgr": "^1.2.2",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-typescript-sort-keys": "^3.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.13",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "sh -c 'pnpm typecheck'",
      "eslint --fix"
    ]
  }
}
